<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />

        <service id="adeo_web.sylius_everypay_plugin.payum.httplug_client"
            class="Symfony\Component\HttpClient\HttplugClient">
            <argument type="service" id="http_client"/>
        </service>


        <service id="tests.adeo_web.sylius_everypay_plugin.behat.context.setup.everypay"
                 class="Tests\AdeoWeb\SyliusEveryPayPlugin\Behat\Context\Setup\EveryPayContext">
            <argument type="service" id="sylius.behat.shared_storage" />
            <argument type="service" id="sylius.repository.payment_method"/>
            <argument type="service" id="sylius.fixture.example_factory.payment_method"/>
            <argument type="service" id="sylius.manager.payment_method"/>
        </service>

        <service id="tests.adeo_web.sylius_everypay_plugin.behat.context.ui.admin.managing_payment_methods"
                 class="Tests\AdeoWeb\SyliusEveryPayPlugin\Behat\Context\Ui\Admin\ManagingPaymentMethodsContext">
            <argument type="service" id="tests.adeo_web.sylius_everypay_plugin.behat.page.admin.payment_method.create" />
        </service>

        <service id="tests.adeo_web.sylius_everypay_plugin.behat.context.ui.shop_everypay"
                 class="Tests\AdeoWeb\SyliusEveryPayPlugin\Behat\Context\Ui\Shop\EveryPayShopContext">
            <argument type="service" id="sylius.behat.page.shop.checkout.complete"/>
            <argument type="service" id="sylius.behat.page.shop.order.show"/>
            <argument type="service" id="tests.adeo_web.sylius_everypay_plugin.behat.page_checkout.external"/>
            <argument type="service" id="tests.adeo_web.sylius_everypay_plugin.behat.service.everypay_api_mocker"/>
        </service>

    </services>
</container>
